{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<main class="mt-20 flex flex-col items-center justify-center font-Poppins">
    <h1 class="h1 text-vert">Votre compte</h1>
    <section class="m-12 flex flex-col items-center justify-center bg-gr">
        <div class="pdp">
            {% if user.avatar %}
                <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="{{ user.username }} avatar"> <br>
            {% endif %}
            {% if app.user == user %}
                <a href="{{ path('app_user_edit', {'id': user.id }) }}"><i class="fa-solid fa-camera"></i></a>
            {% endif %}
        </div>
        <div>
            <div>
                <h3>Pseudo</h3>
                <p>{{ user.username }}</p>
            </div>
            <div>
                <h3>Email</h3>
                <p>{{ user.email }}</h2>
            </div>
        </div>
        <div class="mdp">
            <h3>Mot de passe</h3>
            {% if app.user == user %}
                <a href="{{ path('app_user_password', {'id': user.id }) }}">Changer de mot de passe</a>
            {% endif %}
        </div>
        <a class="link" href="{{path('app_user_stats', {'id': app.user.id })}}">Accéder à mes statistiques</a>
    </section>
</main>
{% endblock %}
